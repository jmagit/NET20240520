<Window x:Class="AjedrezWin.PromocionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AjedrezWin"
        mc:Ignorable="d"
        Title="Seleccionar" ResizeMode="NoResize" SizeToContent="WidthAndHeight" 
        WindowStartupLocation="CenterOwner" Background="{DynamicResource {x:Static SystemColors.InfoBrushKey}}" 
        MinWidth="150">
    <StackPanel Margin="10" MinWidth="120">
        <TextBlock Text="Promocionar el peón a:" Margin="0,0,0,5" />
        <RadioButton Checked="Seleccionar_Click" >Dama</RadioButton>
        <RadioButton Checked="Seleccionar_Click" >Alfil</RadioButton>
        <RadioButton Checked="Seleccionar_Click" >Torre</RadioButton>
        <RadioButton Checked="Seleccionar_Click" >Caballo</RadioButton>
    </StackPanel>
</Window>
