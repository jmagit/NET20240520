<Window x:Class="Ista.Presentacion.WPF.Demo.CuadroDialogo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ista.Presentacion.WPF.Demo"
        mc:Ignorable="d"
        Title="CuadroDialogo" Height="272" Width="565">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" Margin="5" >
            <Button x:Name="button" Content="Cerrar" IsDefault="True" Click="button_Click" Margin="0,0,5,0" />
            <Button x:Name="button1" Content="Cancelar" IsCancel="True"/>

        </StackPanel>

    </Grid>
</Window>
