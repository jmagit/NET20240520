<UserControl x:Class="Ista.Presentacion.WPF.Demo.DemoUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ista.Presentacion.WPF.Demo"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Background>
        <ImageBrush ImageSource="/Images/MNegro.jpg" TileMode="Tile"/>
    </UserControl.Background>
    <Grid>
        <TextBlock FontFamily="Century Gothic" FontSize="24" Margin="10,14,0,0">
            <TextBlock.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFFFFEFE" Offset="0.003"/>
                    <GradientStop Color="#FFF7F38A" Offset="1"/>
                </LinearGradientBrush>
            </TextBlock.Foreground><Italic>Demo</Italic> de <Bold> control</Bold> de usuario</TextBlock>
    </Grid>
</UserControl>
